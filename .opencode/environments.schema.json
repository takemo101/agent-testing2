{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Container-Use Environment Tracking",
  "description": "Tracks container-use environment IDs for reuse across sessions",
  "type": "object",
  "properties": {
    "$schema": { "type": "string" },
    "_comment": { "type": "string" },
    "environments": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "env_id": {
            "type": "string",
            "description": "container-use environment UUID"
          },
          "branch": {
            "type": "string",
            "description": "Git branch name (e.g., feature/issue-123-auth)"
          },
          "issue_number": {
            "type": "integer",
            "description": "GitHub Issue number"
          },
          "pr_number": {
            "type": "integer",
            "description": "GitHub Pull Request number (set after PR creation)"
          },
          "title": {
            "type": "string",
            "description": "Human-readable description"
          },
          "created_at": {
            "type": "string",
            "format": "date-time",
            "description": "ISO 8601 timestamp"
          },
          "last_used_at": {
            "type": "string",
            "format": "date-time",
            "description": "ISO 8601 timestamp of last access"
          },
          "status": {
            "type": "string",
            "enum": ["active", "merged", "abandoned"],
            "description": "Environment lifecycle status"
          }
        },
        "required": ["env_id", "branch", "created_at", "status"]
      }
    }
  },
  "required": ["environments"]
}
